<Page x:Class="Repair.Pages.StatisticsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Статистика">
    <Grid Background="#D2F1F0">
        <StackPanel Margin="10">
            <Label Content="Количество выполненных заявок" FontFamily="Monotype Corsiva" FontSize="16"/>
            <TextBlock x:Name="CompletedRequestsTextBlock" FontFamily="Monotype Corsiva" FontSize="16"/>
            <Label Content="Среднее время выполнения заявки" FontFamily="Monotype Corsiva" FontSize="16"/>
            <TextBlock x:Name="AverageTimeTextBlock" FontFamily="Monotype Corsiva" FontSize="16"/>
        </StackPanel>
    </Grid>
</Page>